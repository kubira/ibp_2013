<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin" >
	 
	    <LinearLayout
	        android:id="@+id/menu"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        <Button
	            android:id="@+id/degree"
		        android:layout_width="0dp"
		        android:layout_weight=".33"
		        android:layout_height="wrap_content"
	            android:text="°" />
	        <Button
	            android:id="@+id/degreeMinute"
		        android:layout_width="0dp"
		        android:layout_weight=".33"
		        android:layout_height="wrap_content"
	            android:text="° '" />
	        <Button
	            android:id="@+id/degreeMinuteSecond"
		        android:layout_width="0dp"
		        android:layout_weight=".33"
		        android:layout_height="wrap_content"
	            android:text="° ' ''" />
	    </LinearLayout>
	    
	    <TextView
	        android:id="@+id/latitude_label"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/menu"
	        android:text="Šířka:" />
	    <EditText
	        android:id="@+id/latitudeDegree"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/latitude_label"
	        android:inputType="numberSigned|numberDecimal"
	        android:hint="Stupně" />
	    <TextView
	        android:id="@+id/longitude_label"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/latitudeDegree"
	        android:text="Délka:" />
	    <EditText
	        android:id="@+id/longitudeDegree"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/longitude_label"
	        android:inputType="numberSigned|numberDecimal"
	        android:hint="Stupně" />
	    <Button
	        android:id="@+id/goToButton"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/longitudeDegree"
	        android:text="Go" />
	    
	</RelativeLayout>
</ScrollView>