<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
 
    <TableLayout
        android:id="@+id/info_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableRow >
            <TextView
                android:text="Název:"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp"
		    	android:layout_weight="1" />
		    <TextView
		        android:id="@+id/name"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
	    </TableRow>
	    <TableRow >
	        <TextView
                android:text="Adresa:"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
		    <TextView
		        android:id="@+id/address"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
	    </TableRow>
	    <TableRow >
		    <TextView
	            android:text="Telefon:"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
		    <TextView
		        android:id="@+id/phone"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
	    </TableRow>
	    <TableRow>
		    <TextView
	            android:text="Hvězdy:"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
		    <TextView
		        android:id="@+id/stars"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
	    </TableRow>
	    <TableRow>
		    <TextView
	            android:text="Web:"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
		    <TextView
		        android:id="@+id/web"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
	    </TableRow>
	    <TableRow>
		    <TextView
	            android:text="Vzdálenost\nod GPS polohy:"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
		    <TextView
		        android:id="@+id/gps_distance"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
	    </TableRow>
	    <TableRow>
		    <TextView
	            android:text="Vzdálenost\nod polohy\nstředu obrazovky:"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
		    <TextView
		        android:id="@+id/cam_distance"
		        android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
		    	android:layout_margin="3dp" />
	    </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/info_table" >
	    <Button
	        android:id="@+id/delete_marker"
	        android:layout_width="0dp"
	        android:layout_weight=".50"
	        android:layout_height="wrap_content"
	        android:text="@string/delete_button" />
	    <Button
	        android:id="@+id/go_to_marker"
	        android:layout_width="0dp"
	        android:layout_weight=".50"
	        android:layout_height="wrap_content"
	        android:text="Zaměřit" />
    </LinearLayout>
    
</RelativeLayout>